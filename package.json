{
  "name": "mukyala-the-spa",
  "private": true,
  "version": "0.0.0",
  "description": "Mukyala Day Spa web app â€“ delivering timeless, personalized spa experiences with old-school customer service, inclusive luxury treatments and AI-powered wellness tools.",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ignore-pattern docs/**",
    "lint:ci": "eslint src",
    "typecheck": "tsc --noEmit",
    "typecheck:test": "tsc -p tsconfig.test.json --noEmit",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "lint:staged": "lint-staged",
    "prepare": "npx simple-git-hooks",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:staging": "STAGING_E2E=true playwright test e2e/staging-api.spec.ts",
    "test:e2e:staging:orders": "STAGING_E2E=true playwright test e2e/staging-orders.spec.ts",
    "trace:icon": "node scripts/trace-icon.cjs"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.83.0",
    "@tanstack/react-router": "^1.127.9",
    "framer-motion": "^12.23.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^4.12.0",
    "thumbhash": "^0.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@playwright/test": "^1.54.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitejs/plugin-react-swc": "^3.10.2",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "c8": "^10.1.3",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-markdown": "^5.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "imagetracerjs": "^1.2.6",
    "jimp": "^1.6.0",
    "jsdom": "^26.1.0",
    "jsonc-eslint-parser": "^2.4.0",
    "lint-staged": "^15.2.0",
    "markdown-eslint-parser": "^1.2.1",
    "msw": "^2.11.6",
    "potrace": "^2.1.8",
    "prettier": "^3.3.2",
    "simple-git-hooks": "^2.9.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4",
    "vitest": "^3.2.4",
    "yaml-eslint-parser": "^1.3.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --cache --fix",
      "prettier --write",
      "vitest related"
    ],
    "*.{css,md,json,yml,yaml}": [
      "prettier --write"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npm run lint:staged",
    "pre-push": "npm run lint && npm run typecheck && npm test"
  }
}
